<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
<variable
    name="user"
    type="com.example.kepo.model.User" />
    </data>

<RelativeLayout
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/home_header_bg"
        android:orientation="vertical"
        android:paddingHorizontal="25dp"
        android:paddingTop="30dp"
        android:paddingBottom="25dp">

        <TextView
            android:id="@+id/welcome_message"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            tools:text="TextView"
            android:textSize="30dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_mytodo"
        android:layout_centerHorizontal="true"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/button_bg"
        android:drawableLeft="@drawable/ic_todo"
        android:drawableRight="@drawable/ic_todo"
        android:onClick="mytodo"
        android:text="My Todo"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/btn_searchtodo"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_below="@id/btn_mytodo"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_bg"
        android:drawableLeft="@drawable/ic_search"
        android:drawableRight="@drawable/ic_search"
        android:onClick="searchtodo"
        android:text="Search Todo"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_searchuser"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_below="@id/btn_searchtodo"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_bg"
        android:drawableLeft="@drawable/ic_people"
        android:drawableRight="@drawable/ic_people"
        android:onClick="SearchUser"
        android:text="Search User"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_profile"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_below="@id/btn_searchuser"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_bg"
        android:drawableLeft="@drawable/ic_face"
        android:drawableRight="@drawable/ic_face"
        android:onClick="profile"
        android:text="Profile"
        android:textAllCaps="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@color/dark_blue"
        android:gravity="center">
        <TextView
            android:textColor="@color/white"
            android:text="\@ 2020 by Mobile Team"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"/>
    </LinearLayout>



</RelativeLayout>

</layout>


